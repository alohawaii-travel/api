{
  "name": "alohawaii-api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 4000",
    "build": "next build",
    "start": "next start -p 4000",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest --testPathIgnorePatterns='tests/e2e/auth-flow.test.ts'",
    "test:all": "jest",
    "test:unit": "jest --testPathPatterns=tests/unit",
    "test:unit-only": "jest --testPathPatterns='tests/unit|tests/helpers' --testPathIgnorePatterns='tests/integration|tests/e2e'",
    "test:integration": "jest --testPathPatterns=tests/integration",
    "test:e2e": "jest --testPathPatterns=tests/e2e/api-routes.test.ts",
    "test:e2e-all": "jest --config jest.e2e.config.js",
    "test:e2e-http": "jest --testPathPatterns=tests/e2e/auth-flow.test.ts",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --testPathIgnorePatterns='tests/e2e/auth-flow.test.ts'",
    "test:ci": "jest --ci --coverage --watchAll=false --testPathIgnorePatterns='tests/e2e/auth-flow.test.ts'",
    "test:setup": "tsx tests/test-runner.ts",
    "test:setup:unit": "tsx tests/test-runner.ts --unit",
    "test:setup:integration": "tsx tests/test-runner.ts --integration",
    "test:setup:e2e": "tsx tests/test-runner.ts --e2e",
    "test:setup:watch": "tsx tests/test-runner.ts --watch",
    "test:setup:coverage": "tsx tests/test-runner.ts --coverage"
  },
  "dependencies": {
    "@prisma/client": "^6.10.1",
    "@types/swagger-ui-react": "^5.18.0",
    "jsonwebtoken": "^9.0.2",
    "next": "^14.2.4",
    "next-auth": "^4.24.11",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-react": "^5.25.2",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.1",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.4",
    "jest": "^30.0.2",
    "jest-environment-node": "^30.0.2",
    "prisma": "^6.10.1",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
